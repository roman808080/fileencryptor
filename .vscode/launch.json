    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch encryptor",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/",
            "args": ["--key", "${workspaceFolder}/cmd/certs/server.key",
                     "--input", "${workspaceFolder}/cmd/.shrc_enc",
                     "--output", "${workspaceFolder}/cmd/.shrc"
                    ],
        }
    ]
}